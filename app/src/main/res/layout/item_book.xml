<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="25sp"
            android:src="@drawable/imgbook"
            android:id="@+id/imgAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/book"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/ic_user"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:src="@drawable/soluong"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/ic_user"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/ic_call"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:src="@drawable/ic_user"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/ic_call"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/ic_tacgia"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:src="@drawable/ic_gia"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/ic_tacgia"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/ic_gia"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/ic_user"
            android:id="@+id/tvname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/ic_call"
            android:layout_below="@+id/tvname"
            android:id="@+id/tvcount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/ic_call"
            android:layout_below="@+id/tvcount"
            android:id="@+id/tvtacgia"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/ic_call"
            android:layout_below="@+id/tvtacgia"
            android:id="@+id/tvgia"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:onClick="editbook"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/edit"
            android:layout_toRightOf="@+id/ic_delete"
            android:id="@+id/ic_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:onClick="delete"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/bin"
            android:layout_toRightOf="@+id/tvcount"
            android:id="@+id/ic_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>