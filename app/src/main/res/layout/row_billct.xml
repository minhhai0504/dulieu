<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="16dp"
            android:src="@drawable/hoadonchitiet"
            android:id="@+id/imgAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textStyle="bold|italic"
            android:textColor="#FF317C76"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/tvmabill"
            android:text="mã bill chi tiết :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold|italic"
            android:textColor="#FF317C76"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvmabill"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/tvtieude"
            android:text="Tên Sach :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold|italic"
            android:textColor="#FF317C76"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvtieude"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/tvsoluongsach"
            android:text="số lượng :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold|italic"
            android:textColor="#317C76"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvsoluongsach"
            android:layout_toRightOf="@+id/imgAvatar"
            android:id="@+id/tvtong"
            android:text="tổng :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tvmabill"
            android:id="@+id/tvMaBillCT"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tvmabill"
            android:layout_below="@+id/tvMaBillCT"
            android:id="@+id/tvTieuDe"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tvmabill"
            android:layout_below="@+id/tvTieuDe"
            android:id="@+id/tvSoLuong"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:id="@+id/tvTongTien"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSoLuong"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tvmabill" />

        <ImageView
            android:id="@+id/xoa"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/tvMaBillCT"
            android:onClick="delete"
            android:src="@drawable/bin" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>